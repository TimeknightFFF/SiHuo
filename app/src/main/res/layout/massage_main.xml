<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <TextView

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_gravity="center_vertical"
        android:background="#ff0000"
        android:gravity="center"
        android:text="消息"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/msg_rl1"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">

        <ImageView
            android:id="@+id/msg_iv1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/icon_message_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/msg_iv1"
            android:text="评论"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@drawable/icon_right_arrow"

            />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#55070707" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/msg_rl2"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">

        <ImageView
            android:id="@+id/msg_iv2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_message_zan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/msg_iv2"
            android:layout_marginLeft="10dp"
            android:text="赞"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@drawable/icon_right_arrow"


            />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#55070707" />

    <ListView
        android:id="@+id/msg_lv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></ListView>


</LinearLayout>