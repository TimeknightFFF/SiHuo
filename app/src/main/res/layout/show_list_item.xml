<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/show_list_item_image"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_launcher"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="4"
        android:background="#fff000"
        android:orientation="vertical">
        <TextView
            android:id="@+id/show_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="手机"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/show_list_item_name01"
                style="@style/show_list_item_name"
                android:text="iPhone"
                />
            <TextView
                android:id="@+id/show_list_item_name02"
                style="@style/show_list_item_name"
                android:text="iPhone"
                />
            <TextView
                android:id="@+id/show_list_item_name03"
                style="@style/show_list_item_name"
                android:text="iPhone"
                />
            <TextView
                android:id="@+id/show_list_item_name04"
                style="@style/show_list_item_name"
                android:text="iPhone"
                />
            <TextView
                android:id="@+id/show_list_item_name05"
                style="@style/show_list_item_name"
                android:text="iPhone"
                />
            <TextView
                android:id="@+id/show_list_item_name06"
                style="@style/show_list_item_name"
                android:text="iPhone"
                />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>