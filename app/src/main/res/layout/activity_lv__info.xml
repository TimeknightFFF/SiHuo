<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.sunshine.sihuo.LV_Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0000"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/lv_item_info_back"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/icon_back_on"
            android:padding="50dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:text="商品详情"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffff2521"
            android:button="@null"
            android:src="@drawable/find_imagebutton" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lv_item_info_iv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/icon_default_avatr100" />

                <TextView
                    android:id="@+id/lv_item_info_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lv_item_list_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/lv_item_info_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥"
                    android:textColor="#ff0000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lv_item_info_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lv_item_info_icon"
                    android:text="450.00"
                    android:textColor="#ff0000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lv_item_info_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/lv_item_info_price"
                    android:text="￥"
                    android:textSize="15sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/lv_item_info_price"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/lv_item_info_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/lv_item_info_icon1"
                    android:gravity="center_vertical"
                    android:text="699.00"
                    android:textSize="10sp" />


                <View
                    android:id="@+id/lv_item_info_line"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lv_item_info_icon1"
                    android:background="#000000" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lv_item_list_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text="FFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#55000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/lv_item_list_btn_love"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/dianzan"
                        android:button="@null" />

                    <TextView
                        android:id="@+id/lv_item_info_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点赞" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#55000000" />

                <LinearLayout
                    android:id="@+id/lv_item_info_ll"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#fff"

                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/lv_item_list_btn1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pinglun" />

                    <TextView
                        android:id="@+id/lv_item_info_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#55000000" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#fff"

                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/lv_item_list_btn2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/fengxiang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享" />
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></ListView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/lv_item_info_rl"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/lv_item_info_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/order_details_linkman_message"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/lv_item_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lv_item_info_iv"
            android:paddingLeft="4dp"
            android:text="私聊"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#ff0000"
            android:text="立即购买"
            android:textColor="#ffffff" />
    </RelativeLayout>

</LinearLayout>


